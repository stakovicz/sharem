{% extends 'base.html.twig' %}

{% block title %}{{ 'home.title'|trans }}{% endblock %}

{% block body %}

    <div class="sticky top-0 flex-row items-center justify-center py-2 m-auto w-full max-w-[1024px] bg-white dark:bg-slate-800">
        <h1 class="py-2 text-xl dark:text-slate-100">{{ block('title') }}</h1>
        {{ form_start(form) }}
            <div class="flex w-full my-2 rounded border-2 border-slate-900 dark:border-slate-400">
                {{ form_label(form.query, null, {label_attr: {class: 'sr-only', }}) }}
                {{ form_widget(form.query, {attr: {class: 'p-2 w-full', autofocus:true}}) }}
                {{ form_widget(form.submit, {attr: {class: 'p-2 border-l-2 border-slate-900 text-sm leading-3 bg-slate-200 dark:border-slate-400 hover:opacity-70'}}) }}
                <button type="button" name="form[clear]" title="{{ 'search.clear.title'|trans }}"
                        class="p-2 border-l-2 border-slate-900 text-sm leading-3 bg-slate-200  dark:border-slate-400 hover:opacity-70"
                >{{ ux_icon('mdi:clear', {class:"w-4 h-4"}) }}</button>
            </div>
        {{ form_end(form) }}
    </div>

    {% if results %}
    <div class="mx-auto w-full max-w-[1024px]">
        <ul>
            {% for result in results %}
                <li class="my-2">
                    <div class="flex rounded p-2 bg-slate-200 dark:bg-slate-700">
                        <img class="mr-2 aspect-1 max-w-48 rounded" src="{{ result.thumbnail }}" alt="" />
                        <div class="w-full flex flex-col">
                            <div class="text-xl dark:text-slate-200 font-bold">{{ result.title }}</div>
                            <div class="text-lg dark:text-slate-400">{{ result.album }}</div>
                            <div class="text-sm dark:text-slate-200 font-bold">{{ 'search_result.artist'|trans({'{artist}': result.artist}) }}</div>
                            <a href="{{ path('app_create', {hash: result.hash}) }}"
                               class="block p-2 mt-auto rounded bg-slate-800 text-slate-300 dark:bg-slate-300 dark:text-slate-800 hover:opacity-70">
                                {{ ('search_result.'~result.type~'.share')|trans }}
                            </a>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
    {% elseif app.request.query.has('query') %}
    <div class="mx-auto w-full max-w-[1024px] dark:text-slate-200">
        {{ 'home.no_results'|trans }}
    </div>
    {% endif %}

{% endblock %}
