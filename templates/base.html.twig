<!DOCTYPE html>
<html lang="{{ app.locale }}">
    <head>
        <meta charset="utf-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="shortcut icon" href="/favicon.ico" />
        <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
        <link rel="manifest" href="/site.webmanifest" />

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="h-screen dark:bg-stone-800">
        <main class="flex flex-col justify-between min-h-64">
            {% block body %}{% endblock %}
        </main>
        <footer class="p-4 dark:text-stone-100">
            <ul>
                <li><a href="{{ path('app_home') }}">{{ 'footer.home'|trans }}</a></li>
            </ul>
            <ul>
                <li {{ stimulus_controller('theme') }}>
                    <button {{ stimulus_action('theme', 'toggle', 'click') }}
                        {{ stimulus_target('theme', 'button') }}
                         data-dark="{{ 'footer.dark_theme'|trans }}"
                         data-light="{{ 'footer.light_theme'|trans }}"
                         title="{{ 'footer.change_theme'|trans }}"
                    ></button>
                </li>
            </ul>
        </footer>
    </body>
</html>
